/* Dropdown Button */
.index_dropbtn {
    background-color: #00000000;
    color: #e6e6e6;
    padding: 16px;
    font-size: 16px;
    border: none;
    margin-top: 26px;
    width: 150px;
  }
  /* The container <div> - needed to position the dropdown content */
  .index_dropdown {
    position: absolute;
    display: inline-block;
    margin-left: 300px;
    width: 150px;
    
  }
  /* Dropdown Content (Hidden by Default) */
  .index_dropdown-content {
    display: none;
    position: absolute;
    background-color: #e6e6e6;
    min-width: 150px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    width: 150px;
  }
  /* Links inside the dropdown */
  .index_dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    font-family: Arial, Helvetica, sans-serif;
  }
  /* Change color of dropdown links on hover */
  .index_dropdown-content a:hover {background-color: rgb(28, 167, 160);}
  /* Show the dropdown menu on hover */
  .index_dropdown:hover .index_dropdown-content {display: block;}
  /* 
  Change the background color of the dropdown button 
  when the dropdown content is shown 
  */
  .index_dropdown:hover .index_dropbtn {background-color: #00000000;}


